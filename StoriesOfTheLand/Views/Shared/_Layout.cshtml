@using Microsoft.AspNetCore.Authorization;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StoriesOfTheLand</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-JM59TD2YM2"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-JM59TD2YM2');
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div id="navDiv" class="container-fluid d-print-none">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StoriesOfTheLand</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span id="mobilenav" class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Specimen/">Specimens</a>
                        </li>
                        <li class="nav-item" id="mapnav">
                            <a class="nav-link text-dark" href="/Specimen/Map">Map</a>
                        </li>
                        <li class="nav-item" id="faqnav">
                            <a class="nav-link text-dark" href="/Faq">FAQ</a>
                        </li>
                        <li class="nav-item" id="mapnav">
                            <a class="nav-link text-dark" href="/Resources">Resources</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item" id="portal">
                                <a class="nav-link text-dark" href="/Admin/Portal">Portal</a>  
                            </li>
                        }

                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <div class="d-flex justify-content-end">
                                        <!-- Will display the button depending if the user is authenthicated -->
                                        @if (!User.Identity.IsAuthenticated)
                                        {
                                            <div class="d-flex justify-content-end">
                                                <a class="btn btn-primary btn-polytech btn-m" asp-controller="Account" asp-action="SignIn">Login</a>
                                            </div>
                                        }
                                        @if (User.Identity.IsAuthenticated)
                                        {
         
                                            <div class="d-flex justify-content-end">
                                                 <a class="btn btn-primary btn-polytech btn-m" asp-controller="Account" asp-action="SignOut">Signout</a>
                                            </div>
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    </ul>
                   </div>
            </div>
           </nav>
       
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div id="footer" class="container">
            @await Component.InvokeAsync("Footer")



        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>