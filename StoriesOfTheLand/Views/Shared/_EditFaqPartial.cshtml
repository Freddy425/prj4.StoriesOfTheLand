<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="faqModalLabel">Faq</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="#">
            <div class="form-group">
                <input type="hidden" id="EditFaqId" />
                <label id="editTitle" class="control-label">Title:</label>
                <input id="EditTitleInput" class="form-control" />

            </div>
            <div class="form-group">
                <label id="labelEditDescription" class="control-label">Description:</label>
                <input id="EditDescriptionInput" class="form-control" />

            </div>

            <div class="text-center mt-5">
                <button class="btn btn-secondary" type="submit" id="SaveFaqButton">
                    Save
                </button>



                <button class="btn btn-secondary">
                    Cancel
                </button>
            </div>
            </form>
        </div>
    </div>
</div>


<script>


    // example
    function test(value) {
        console.log(value)
    }

    function faqEditModalFill(title, description, id) {
        var itemTitle = title;
        var itemDescription = description;

        $('#EditTitleInput').val(itemTitle);
        $('#EditDescriptionInput').val(itemDescription);
        $('#EditFaqId').val(id);

    }
</script>

<script>
    function saveFaqChanges() {
        var faqId = $('#EditFaqId').val();
        var title = $('#EditTitleInput').val();
        var description = $('#EditDescriptionInput').val();

        // Create an object to send to the server
        var data = {
            Id: faqId,
            Title: title,
            Description: description
        };

        $.ajax({
            type: 'POST',
            url: '/Faq/Edit'+ faqId,
                data: JSON.stringify(data),
            contentType: 'application/json',
            success: function (result) {

                $('#faqModal').modal('hide');


            },
            error: function (error) {

                console.error('Error saving changes:', error);

            }
        });
    }
            
</script>