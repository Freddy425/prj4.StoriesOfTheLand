@model StoriesOfTheLand.Models.Resource

@{
    ViewData["Title"] = "Create Resource";
}



<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#CreateResourceModal">
    Create Resource
</button>

<div class="modal fade" id="CreateResourceModal" tabindex="-1" role="dialog" aria-labelledby="resourceModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ResourceModalLabel">Create Resource</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ResourceTitle" class="control-label"></label>
                        <input asp-for="ResourceTitle" class="form-control" />
                        <span id="ResourceTitleError" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ResourceDescription" class="form-label">Resource Description:</label>
                        <textarea asp-for="ResourceDescription" class="form-control" rows="3"></textarea>
                        <span id="ResourceDescriptionError" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ResourceURL" class="control-label"></label>
                        <input asp-for="ResourceURL" class="form-control" />
                        <span id="ResourceURLError" class="text-danger"></span>
                    </div>
                    <div class="text-center mt-5">
                        <button class="btn btn-secondary" type="submit">
                            Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}