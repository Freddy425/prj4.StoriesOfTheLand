@model StoriesOfTheLand.Models.Specimen



<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#specimenModal">
    Create Specimen
</button>

<div class="modal fade" id="specimenModal" tabindex="-1" role="dialog" aria-labelledby="specimenModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="specimenModalLabel">Create Specimen</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="EnglishName" class="form-label">English Name:</label>
                        <input asp-for="EnglishName" class="form-control" />
                        <span asp-validation-for="EnglishName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LatinName" class="form-label">Latin Name:</label>
                        <input asp-for="LatinName" class="form-control" />
                        <span asp-validation-for="LatinName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CreeName" class="form-label">Cree Name:</label>
                        <input asp-for="CreeName" class="form-control" />
                        <span asp-validation-for="CreeName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="SpecimenDescription" class="form-label">Specimen Description:</label>
                        <textarea asp-for="SpecimenDescription" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="SpecimenDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CulturalSignificance" class="form-label">Cultural Significance:</label>
                        <textarea asp-for="CulturalSignificance" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="CulturalSignificance" class="text-danger"></span>
                    </div>

                    @* <!-- Hidden field for Specimen Image Path with default value as empty -->
                    <div class="form-group mb-3" style="display: none;">
                    <label asp-for="SpecimenMedia.SpecimenImagePath" class="form-label">Image Path:</label>
                    <input asp-for="SpecimenMedia.SpecimenImagePath" class="form-control" />
                    <span asp-validation-for="SpecimenMedia.SpecimenImagePath" class="text-danger"></span>
                    </div>

                    <!-- Hidden field for Specimen Audio Path with default value as empty -->
                    <div class="form-group mb-3" style="display: none;">
                    <label asp-for="SpecimenMedia.SpecimenAudioPath" class="form-label">Audio Path:</label>
                    <input asp-for="SpecimenMedia.SpecimenAudioPath" class="form-control" />
                    <span asp-validation-for="SpecimenMedia.SpecimenAudioPath" class="text-danger"></span>
                    </div>*@
                    <div class="text-center mt-5">
                        <button class="btn btn-secondary" type="submit">
                            Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    window.onload = function () {
        // Check for error message and show modal if present
        var errorMessage = '@ViewData["ErrorMessage"]';
        if (errorMessage) {
            var specimenModal = new bootstrap.Modal(document.getElementById('specimenModal'));
            specimenModal.show();
        }
    };
</script>
